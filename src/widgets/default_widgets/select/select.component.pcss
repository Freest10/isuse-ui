:root {
  --widgetWrap: {
    padding: 7px 0 12px;
    clear: both;
    text-align: right;
    position:relative;
    line-height:25px
  };
  --label-share:{
    float:left;
    padding:2px 10px 0 0;
  }
}

label {@apply --label-share;}
select,label {font-size:12px;}
select{width:154px;}
.wrap-widget{@apply --widgetWrap;}
.errorWidget{border-color:#e04b41;}
