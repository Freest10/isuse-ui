  --widgetWrap: {
    padding: 7px 0 12px;
    clear: both;
    text-align: right;
    position:relative;
    line-height:25px
  };
  --label-share:{
    float:left;
    padding:2px 10px 0 0;
  }
}
/*label { display: block; }*/
label{@apply --label-share;}
input{width:154px;margin: 0px;padding: 1px;}
label, input{font-size:12px;   /* float: left;*/}
/*.wrap-widget{@apply --widgetWrap;position:relative;clear: both;text-align: right;}*/
.wrap-widget{@apply --widgetWrap;}
.errorWidget{border-color:#e04b41;}
